{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.dapm.org/config/orga_loggingoverheadsink_config_schema.json",
  "title": "OrgA LoggingOverheadSink Config",
  "type": "object",
  "properties": {
    "n_messages": {"type": "integer", "minimum": 1},
    "final_time_file": { "type": "string", "pattern": "^[^/\\\\]*$" },
    "log_file": { "type": "string", "pattern": "^[^/\\\\]*$" }
  },
  "required": ["n_messages", "final_time_file"],
  "additionalProperties": false
}